alias(
    "ls",
    fn (bid, cmd, args, raw) {
      if len(args) == 0 {
        m_notify(bid, "tasked beacon to list files");
        return b_ls(bid);
      } elif len(args) == 1 {
        m_notify(bid, "tasked beacon to list files");
        return b_ls(bid, args[0]);
      } else {
        return m_error(bid, "invalid number of arguments");
      }
    },
    "list files in directory",
    "Usage:\n\tls [dir/file]",
    true
);